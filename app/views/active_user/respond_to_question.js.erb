var response = document.getElementById("<%= 'question_response_' + @question_id.to_s %>");
var response_link = document.getElementById("<%= 'respond_to_question_' + @question_id.to_s %>");

if (response && response_link)
{
   if (response.style.display == "none" || response.style.display == "")
   {
     response.style.display = "block";
     response_link.innerHTML = "Don't Respond"; 
   }
   else
   {
     response.style.display = "none";
     response_link.innerHTML = "Respond"; 
   }
}
